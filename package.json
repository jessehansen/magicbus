{
  "name": "magicbus",
  "version": "4.1.0",
  "description": "A message bus framework using RabbitMQ.",
  "main": "lib/index.js",
  "scripts": {
    "ci": "npm-run-all lint test:ci",
    "test": "jest",
    "test:ci": "npm run test -- --colors --ci --verbose --testResultsProcessor='jest-junit' && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "esw ."
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twindagger/magicbus.git"
  },
  "author": "Jesse Hansen <twindagger@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/twindagger/magicbus/issues"
  },
  "homepage": "https://github.com/twindagger/magicbus#readme",
  "devDependencies": {
    "coveralls": "3.0.2",
    "eslint": "5.5.0",
    "eslint-plugin-jest": "21.22.0",
    "eslint-plugin-prefer-arrow": "1.1.2",
    "eslint-plugin-unicorn": "6.0.1",
    "eslint-watch": "4.0.2",
    "jest": "^23.6.0",
    "jest-junit": "5.1.0",
    "jsdoc": "3.5.5",
    "npm-run-all": "4.1.3"
  },
  "dependencies": {
    "amqplib": "^0.5.2",
    "machina": "^2.0.2",
    "magicpipes": "^1.0.1",
    "monologue.js": "^0.3.5",
    "postal": "^2.0.5",
    "shortid": "^2.2.13"
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)(spec|test|tests).js?(x)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      },
      "./lib/amqp/**/*.js": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      },
      "./lib/*-machine.js": {
        "branches": 20,
        "functions": 20,
        "lines": 20,
        "statements": 20
      }
    }
  },
  "jest-junit": {
    "suiteName": "magicpipes jest",
    "classNameTemplate": "{filename}",
    "titleTemplate": "{classname} > {title}",
    "ancestorSeporator": " > "
  }
}
